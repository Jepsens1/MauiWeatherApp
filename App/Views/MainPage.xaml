<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:VM="clr-namespace:App.ViewModels"
             x:DataType="VM:MainPageViewModel"
             x:Class="App.MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackLayout Orientation="Horizontal" Grid.ColumnSpan="2" Padding="10" Spacing="10">
            <Entry Text="{Binding CityName}" HorizontalOptions="FillAndExpand" Placeholder="City" ReturnCommand="{Binding GetWeatherDataCommand}"/>
        </StackLayout>
        <StackLayout Padding="10" Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Frame IsVisible="{Binding HasData}" CornerRadius="20" HorizontalOptions="FillAndExpand">
                <StackLayout Orientation="Vertical">
                    <StackLayout Orientation="Horizontal">
                        <Label Text="{Binding CurrentWeatherData.CityName, StringFormat='Current weather in {0}'}" 
                               FontSize="24" FontAttributes="Bold" VerticalOptions="Center"/>
                        <Image Source="{Binding IconSource}"/>
                    </StackLayout>
                    <Label Text="{Binding CurrentWeatherData}"/>
                </StackLayout>
            </Frame>
            <Frame IsVisible="{Binding HasData}" CornerRadius="20" HorizontalOptions="FillAndExpand">
                <StackLayout Orientation="Vertical">
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Daily Forecast 16 Days" FontSize="24" FontAttributes="Bold" 
                           VerticalOptions="Center"/>
                        <Image Source="{Binding IconSource}"/>
                    </StackLayout>
                </StackLayout>
            </Frame>
            <ActivityIndicator Color="Aqua" HeightRequest="100" WidthRequest="100" IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}"
                               HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" Grid.Row="3" Grid.ColumnSpan="2" Padding="10" Spacing="10">
            <Button IsEnabled="{Binding IsNotBusy}" Command="{Binding GetWeatherDataCommand}" HorizontalOptions="FillAndExpand" Text="Search"/>
            <Button IsEnabled="{Binding IsNotBusy}" Command="{Binding GetCurrentLocationCommand}" HorizontalOptions="FillAndExpand" Text="Get from my Location"/>
        </StackLayout>
    </Grid>
</ContentPage>
